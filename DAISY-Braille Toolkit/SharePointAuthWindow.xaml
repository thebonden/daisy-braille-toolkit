<Window x:Class="DAISY_Braille_Toolkit.SharePointAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SharePoint – login og test" Height="460" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,0,0,12">
            <Run Text="Her kan du logge ind med din Entra ID-bruger (SSO) og teste, om DAISY-Braille Toolkit kan læse/skriv til SharePoint via Microsoft Graph."/>
        </TextBlock>

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Tenant ID:"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TenantIdBox" IsReadOnly="True"/>

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Client ID:" Margin="0,8,0,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="ClientIdBox" IsReadOnly="True" Margin="0,8,0,0"/>

        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Site URL:" Margin="0,8,0,0"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="SiteUrlBox" IsReadOnly="True" Margin="0,8,0,0"/>

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Counters-liste:" Margin="0,8,0,0"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="CountersListBox" IsReadOnly="True" Margin="0,8,0,0"/>

        <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Productions-liste:" Margin="0,8,0,0"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="ProductionsListBox" IsReadOnly="True" Margin="0,8,0,0"/>

        <TextBox Grid.Row="6" Grid.ColumnSpan="2" x:Name="OutputBox" Margin="0,12,0,12" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" AcceptsReturn="True"/>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="LoginButton" Content="Log ind" Width="90" Margin="0,0,8,0" Click="Login_Click"/>
            <Button x:Name="LogoutButton" Content="Log ud" Width="90" Margin="0,0,8,0" Click="Logout_Click"/>
            <Button x:Name="TestReadButton" Content="Test læs" Width="90" Margin="0,0,8,0" Click="TestRead_Click"/>
            <Button x:Name="TestWriteButton" Content="Test skriv" Width="90" Margin="0,0,8,0" Click="TestWrite_Click"/>
            <Button Content="Luk" Width="90" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
